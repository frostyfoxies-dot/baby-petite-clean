# ===========================================
# Kids Petite Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# ===========================================

# ===========================================
# Sanity CMS
# ===========================================
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
SANITY_API_TOKEN=your_api_token
SANITY_DATASET=production

# ===========================================
# Database (Supabase/PostgreSQL)
# ===========================================
DATABASE_URL=your_database_url

# ===========================================
# Stripe Payments
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_xxx
STRIPE_SECRET_KEY=sk_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Apple Pay Configuration (Optional)
# Required for Apple Pay on the web
# Get from Apple Developer Account: https://developer.apple.com/account
# APPLE_PAY_MERCHANT_IDENTIFIER=merchant.com.yourdomain

# Google Pay Configuration (Optional)
# Required for Google Pay on the web
# Get from Google Pay Business Console: https://pay.google.com/business/console
# GOOGLE_PAY_MERCHANT_ID=your_merchant_id
# GOOGLE_PAY_MERCHANT_NAME=Kids Petite

# ===========================================
# Algolia Search
# ===========================================
NEXT_PUBLIC_ALGOLIA_APP_ID=your_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your_search_key
ALGOLIA_ADMIN_KEY=your_admin_key

# ===========================================
# SendGrid Email
# ===========================================
SENDGRID_API_KEY=your_api_key
SENDGRID_FROM_EMAIL=noreply@kidspetite.com

# ===========================================
# OpenAI (AI/ML Features)
# ===========================================
OPENAI_API_KEY=your_api_key
OPENAI_MODEL=gpt-4-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# NextAuth.js Authentication
# ===========================================
NEXTAUTH_SECRET=your_secret
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# ===========================================
# OAuth - Google (Optional)
# ===========================================
# Uncomment and configure if using Google OAuth
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# OAuth - Facebook (Optional)
# ===========================================
# Uncomment and configure if using Facebook OAuth
# FACEBOOK_CLIENT_ID=your_facebook_client_id
# FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# ===========================================
# Sentry Error Tracking (Optional in development)
# ===========================================
# Required in production for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Optional: For source maps upload during build
# SENTRY_AUTH_TOKEN=your_auth_token
# SENTRY_ORG=your_org_slug
# SENTRY_PROJECT=your_project_slug

# ===========================================
# Cloudflare CDN (Optional)
# ===========================================
# Required for programmatic cache purging via API
# Get Zone ID from Cloudflare dashboard (right sidebar when domain selected)
# CLOUDFLARE_ZONE_ID=your_zone_id
# Create API token at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone → Cache Purge → Purge, Zone → Zone → Read
# CLOUDFLARE_API_TOKEN=your_api_token

# ===========================================
# Google Analytics 4 (Required for analytics)
# ===========================================
NEXT_PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# Google Maps (Optional - Address Autocomplete)
# ===========================================
# Required for address autocomplete functionality in checkout and account forms
# Get API key from: https://console.cloud.google.com/apis/credentials
# Required APIs: Places API, Maps JavaScript API
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===========================================
# Live Chat Integration (Optional)
# ===========================================
# Enable live chat support for customers
# Choose one provider: intercom, crisp, or zendesk
# NEXT_PUBLIC_CHAT_ENABLED=true
# NEXT_PUBLIC_CHAT_PROVIDER=intercom

# Intercom Configuration
# Get App ID from: https://app.intercom.com/a/apps/_/settings/web
# NEXT_PUBLIC_INTERCOM_APP_ID=your_intercom_app_id

# Crisp Configuration
# Get Website ID from: https://app.crisp.chat/settings/website/
# NEXT_PUBLIC_CRISP_WEBSITE_ID=your_crisp_website_id

# Zendesk Configuration
# Get Key from Zendesk Widget settings
# NEXT_PUBLIC_ZENDESK_KEY=your_zendesk_key

# Development Mode - Mock chat for testing
# Set to true to use mock chat provider in development
# NEXT_PUBLIC_CHAT_MOCK=false
